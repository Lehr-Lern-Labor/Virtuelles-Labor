<!DOCTYPE html>
<html>

<head>
    <%- include('partials/head') %>
</head>

<body>
    <div class="container">
		<%- include('partials/header') %>
        <section class="form-content row align-items-center justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-8 col-10" id="form">
                <h5>Sign In</h5>
                <br>
                <div class="row justify-content-left m-0 p-0">
                    <% if(locals.wrongLoginData === true) { %>
                        <small class="error"><i class="fa fa-times-circle"></i> The password or
                            the username you entered is wrong! Please try again.</small>
                    <% } %>
                </div>
                <br>
                <form action="login" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" id="usernameInput" name="username" placeholder="Username"
                            maxlength="10" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="passwordInput" name="password" placeholder="Password"
                            required>
                    </div>                    
                    <div class="row justify-content-center m-0 p-0">
                        <small>Don't have an account yet? <span><a class="link" href="/register"> Sign up now!</a></span></small>
                    </div>
                    <button class="primary-button mt-4 p-2" type="submit">
                        <span>Sign in</span>
                    </button>
                </form>
            </div>
        </section>
	</div>
    <%- include('partials/footer') %>
</body>

</html>