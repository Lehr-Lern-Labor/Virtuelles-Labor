<!DOCTYPE html>
<html>

<head>
	<%- include('partials/head') %>
</head>

<body>
	<div class="container">
		<%- include('partials/header') %>
        <section class="small-form-content row align-items-center justify-content-center">
            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 col-10" id="form">
                <h5 class="mb-4">Forgot Password?</h5>
                <div class="row justify-content-left mb-3 m-0 p-0">
                    <% if(locals.messageSent === true) { %>
                        <small class="success"><i class="fa fa-check-circle"></i> We have sent you a link to <%=sentTo%> to reset your password.</small>
                    <% } else if (locals.invalidEmail === true) { %>
                        <small class="error"><i class="fa fa-times-circle"></i> The email you
                            entered is invalid. Please try again.</small>
                    <% } else if (locals.sendMessageFailed === true) { %>
                        <small class="error"><i class="fa fa-times-circle"></i> There's an error while sending your message. 
                            Please try again.</small>
                    <% } %>
                </div>
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="email" class="input-label">Email</label>
                        <input type="text" class="form-control" id="emailInput" name="email" placeholder=""
                            required value="<%=email%>">
                    </div>
                    <button class="primary-button mt-4 p-2" type="submit">
                        <span>Reset password</span>
                    </button>
                    
                </form>
            </div>
        </section>
	</div>
    <%- include('partials/footer') %>
</body>

</html>