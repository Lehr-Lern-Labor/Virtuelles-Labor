<!DOCTYPE html>
<html>

<head>
	<%- include('partials/head') %>
</head>

<body>
	<div class="container">
		<%- include('partials/header') %>
        <section class="large-form-content row align-items-center justify-content-center">
            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 col-10" id="form">
                <h5 class="mb-5"><%=languageData.header.contactUs%></h5>
                <div class="row justify-content-center mb-3 m-0 p-0">
                    <small><%=languageData.contactUs.loveToHear%> <br> <%=languageData.contactUs.reachUsAt%> <a class="link" href="mailto:<%=vimsu_default_email%>"><%=vimsu_default_email%></a></small>
                </div>
                <div class="row justify-content-center mb-3 m-0 p-0">
                    <%=languageData.contactUs.or%>
                </div>
                <div class="row justify-content-center mb-4 m-0 p-0">
                    <small><%=languageData.contactUs.stayAnonymous%></small>
                </div>
                <div class="row justify-content-left mb-3 m-0 p-0">
                    <% if(locals.messageSent === true) { %>
                        <small class="success"><i class="fa fa-check-circle"></i> <%=languageData.contactUs.messageSent%></small>
                    <% } else if (locals.invalidEmail === true) { %>
                        <small class="error"><i class="fa fa-times-circle"></i> <%=languageData.accountSettings.invalidEmail%></small>
                    <% } else if (locals.sendMessageFailed === true) { %>
                        <small class="error"><i class="fa fa-times-circle"></i> <%=languageData.contactUs.messageSentFail%></small>
                    <% } else if (locals.invalidMessage === true) { %>
                        <small class="error"><i class="fa fa-times-circle"></i> <%=languageData.contactUs.emptyMessage%></small>
                    <% } %>
                </div>
                <div class="row justify-content-left m-0 mb-2 p-0"><small class="warning">* <%=languageData.accountSettings.requiredFields%></small></div>
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="email" class="input-label"><%=languageData.userData.email%></label>
                        <input type="text" class="form-control" id="emailInput" name="email" placeholder="maxmustermann@example.com" value="<%=email%>">
                    </div>
                    <div class="form-group">
                        <label for="message" class="input-label"><%=languageData.contactUs.yourMessage%>&nbsp<span class="warning">*</span></label>
                        <textarea id="messageInput" class="form-control" name="message" required rows="7"><%=message%></textarea>
                    </div>                    
                    <button class="primary-button mt-4 p-2" type="submit">
                        <span><%=languageData.contactUs.sendMessage%></span>
                    </button>
                </form>
            </div>
        </section>
	</div>
	<%- include('partials/footer') %>
</body>

</html>