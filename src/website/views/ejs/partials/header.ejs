<div id="header" class="headerBG clearfix" role="banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <div id="logo" class="headerBG">
                    <a href="/">
                        <img id="logoimg" src="website/assets/vimsu_banner.png" type="image/png" alt="Vimsu Logo"
                            style="width:79px;height:119px;">
                    </a>
                </div>
                <div class="col" id="signature">
                    <div id="site-name">
                        <a href="/">
                            <div class="site-name-child">
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <% if (locals.loggedIn === true) { %>
                <div class="profileIcon" style="display:inline-block;vertical-align:top;">
                    <i class="fa fa-user fa-4x iconProfile"></i>
                </div>
                <div style="display:inline-block; margin-left: 10px">
                    <div><%=forename%> (@<%=username%>)</div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand-lg navbar-light bg-custom">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav mr-auto ml-5 pl-4">
                <% if (locals.loggedIn === true) { %>
                    <% if (locals.videoStorageActivated) { %>
                        <li class="nav-item">
                            <a class="action_button nav-link navbar-brand" href="/upload">
                                <div class="octicons octicon octicon-cloud-upload">
                                    <p id="octicon_text">
                                        Upload
                                    </p>
                                </div>
                            </a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="action_button nav-link navbar-brand" href="/account">
                            <div class="octicons octicon octicon-gear">
                                <p id="octicon_text">
                                    Account Settings
                                </p>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="action_button nav-link navbar-brand" href="/logout">
                            <div class="octicons octicon octicon-sign-out">
                                <p id="octicon_text">
                                    Log out
                                </p>
                            </div>
                        </a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="action_button nav-link navbar-brand" href="/login">
                            <span class="octicons octicon octicon-sign-in">
                                <p id="octicon_text">
                                    Log in
                                </p>
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="action_button nav-link navbar-brand" href="/register">
                            <span class="octicons octicon octicon-pencil">
                                <p id="octicon_text">
                                    Register
                                </p>
                            </span>
                        </a>
                    </li>
                <% } %>
        </ul>
        <% if (locals.loggedIn === true) { %>
            <form class="form-inline">
                <a class="btn btn-outline-warning mr-5" type="button" href="/game">Enter Conference >></a>
            </form>
        <% } %>
    </div>
</nav>